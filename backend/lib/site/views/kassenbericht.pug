- var heute = now.tagMonatJahrLang;

include mixins

doctype html
html
  head
    meta(charset="utf-8")
    link(href=publicUrlPrefix + '/stylesheets/screen.css', rel="stylesheet")
    link(href=publicUrlPrefix + '/fonts/fonts.css', rel="stylesheet")

  body
    .container-fluid
      .row
        .col-12
          .float-end
            img(src=publicUrlPrefix + '/reporting/logo.png', height="80")
      .row
        .col-12
          .page-header
            .float-end
              address
                strong Jazzclub Karlsruhe e.V. <br>
                | Leopoldstr. 13 <br>
                | 76133 Karlsruhe
            h1(style="white-space: nowrap") Kassenabrechnung #{datum.monatJahrKompakt}
      .row
        .col-6
          table.table.table-bordered.table-sm
            - var n = 0;
            tr: th.text-center(colspan=3) Einnahmen
            tr
              th Verwendungszweck
              th Beleg-Nr.
              th.text-end Betrag
            while n < 19
              tr
                td &nbsp;
                td
                td
                - n++;
            tr
              th Summe
              td
              td

        .col-6
          table.table.table-bordered.table-sm
            - var n = 0;
            tr: th.text-center(colspan=3) Ausgaben
            tr
              th Verwendungszweck
              th Beleg-Nr.
              th.text-end Betrag
            while n < 18
              tr
                td &nbsp;
                td
                td
                - n++;
            tr
              td An Bank
              td
              td
            tr
              th Summe
              td
              td
      +signbox(heute, 'Kassierer/-in')
      +signbox(heute, 'Freigegeben')
