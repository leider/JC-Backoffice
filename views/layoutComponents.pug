mixin notificationsBlock(notificationmessage)
  -notificationmessage.kill()
  -var contents = notificationmessage.contents()
  #notifications(class='alert alert-block hidden-print ' + contents.type)
    button.close(type='button', data-dismiss='alert') &times;
    h4 #{contents.title}
    | #{contents.text}

mixin topNavbar(xs)
  .navbar-header
    a.navbar-brand(href='/')
      img(src='/img/logo_weiss.png', alt='Jazzclub')
    a.btn.btn-default.navbar-toggle(data-toggle='collapse', data-target='.collapse-top')
      span.sr-only Toggle
      i.fa.fa-bars.fa-lg.fa-inverse

  .navbar-collapse.collapse.collapse-top
    ul.nav.navbar-nav.bottom
      if user && (accessrights.isOrgaTeam())
        li(data-jcnav='veranstaltungen')
          a(href='/veranstaltungen/zukuenftige')
            i.fa.fa-calendar.fa-fw.fa-lg
            span.hidden-sm &nbsp;Veranstaltungen&nbsp;
        li(data-jcnav='optionen')
          a(href='#')
            i.fa.fa-cogs.fa-fw.fa-lg
            span.hidden-sm &nbsp;Optionen
          ul.dropdown-menu
            li: a(href='/optionen') Optionen
            li: a(href='/optionen/orte') Orte
        li(data-jcnav='gema'): a(href='/gema')
          i.fa.i.fa.i.fa.fa-pie-chart.fa-fw
          span.hidden-sm &nbsp;GEMA
      if user && (accessrights.isSuperuser())
        li(data-jcnav='mailsender')
          a(href='#')
            i.fa.fa-envelope-o.fa-fw.fa-lg
            span.hidden-sm &nbsp;Mails
          ul.dropdown-menu
            li: a(href='/mailsender') Regeln
            li: a(href='/mailsender/compose') Manuell
            li: a(href='/mailsender/emailAddresses') Emailadressen bearbeiten
        li(data-jcnav='users')
          a(href='#')
            i.fa.fa-users.fa-fw
            span.hidden-sm &nbsp;User
          ul.dropdown-menu
            li: a(href='(/users') Bearbeiten / Anlegen
            li: a(href='/users/rundmail') Rundmail an alle
        li(data-jcnav='teamseite')
          a(href='#')
            i.fa.fa-hand-paper-o.fa-fw.fa-lg
            span.hidden-sm &nbsp;Team
          ul.dropdown-menu
            li: a(href='/teamseite/admin') Admin
            li: a(href='/teamseite') Normal
      else
        li(data-jcnav='teamseite')
          a(href='/teamseite')
            i.fa.fa-hand-paper-o.fa-fw.fa-lg
            span.hidden-sm &nbsp;Team&nbsp;
      li(data-jcnav='wiki')
        a(href='#')
          i.fa.fa-book.fa-fw
          span.hidden-sm &nbsp;Wiki&nbsp;
        ul.dropdown-menu
          for subdir in wikisubdirs
            li: a(href='/wiki/' + subdir + '/') #{subdir}

      li: a(href='/logout')
        i.fa.fa-sign-out.fa-fw
        span.hidden-sm &nbsp;Abmelden
