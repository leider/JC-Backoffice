        li.nav-item.dropdown(data-jcnav='wiki')
          a.nav-link.dropdown-toggle(href='#', data-toggle='dropdown')
            i.fas.fa-book.fa-fw.fa-lg
            span &nbsp;Wiki&nbsp;
          .dropdown-menu
            for subdir in wikisubdirs
              a.dropdown-item(href='/wiki/' + subdir + '/') #{subdir}
