                i.fas.fa-sign-out-alt.fa-fw.fa-lg
                | &nbsp;Abmelden

      else
        ul.navbar-nav.ml-md-auto.d-none.d-md-flex.mr-3
          li.nav-item: a.nav-link(href="/logout")
            i.fas.fa-sign-out-alt.fa-fw.fa-lg
            | &nbsp;Abmelden
