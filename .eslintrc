{
  "extends": ["plugin:@typescript-eslint/recommended", "eslint:recommended"],
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "sourceType": "module",
    "ecmaVersion": 8
  },
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "quotes": [ 2, "double", { "avoidEscape": true }],
    "no-sync": 2,
    "no-alert": 2,
    "no-eval": 2,
    "no-process-exit": 2,
    "curly": [2, "all"],
    "eqeqeq": 2
  }
}
