extends ../../../views/layout

block title
  | Veranstaltungen eines Monats

block content
  .col-12
    .row
      .col-12
        .page-header
          .btn-group.float-right
            a.btn.btn-primary(href='/veranstaltungen/imgzip/' + monat)
              i.fas.fa-download.fa-fw
              | &nbsp;Alle Bilder als ZIP
          h2 Pressetexte
    .row
      each veranstaltung in liste
        .col-lg-6
          | !{Renderer.render(veranstaltung.presseTemplate() + veranstaltung.presse.text + "\n\n" + veranstaltung.presse.fullyQualifiedJazzclubURL())}
          hr
