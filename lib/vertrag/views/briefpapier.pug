include ../../../views/layoutComponents
include ../../../views/formComponents
  
mixin signbox(title, party, optionalText, unterschrift)
  .row
    .col-xs-4
      p(style='line-height:3;') #{title}:
    .col-xs-8
      if (optionalText)
        if (unterschrift)
          p(style='line-height:3;border-bottom:1px dotted')
            img(src='public/reporting/niklas.png', height='22')
        else
          p(style='line-height:3;border-bottom:1px dotted;') #{optionalText}
      else
        p(style='line-height:3;border-bottom:1px dotted;') &nbsp;
      p.text-center(style='margin-top:-10px; font-size:6px;') #{party}


mixin bild(name)
  div(style='margin-top:40px')
    img(src='public/reporting/' + name + '.png', height='30')
  
