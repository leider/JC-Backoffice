mixin blogposts-panel(posts)
  h4 #{t('wiki.blogposts')}:
  each post in posts
    .panel.panel-default
      .panel-heading
        h1.panel-title #{post.title}
          small.float-right #{post.date().locale(language).format('LL')}
      .panel-body
        p !{post.teaser}
          small.float-right: a(href=post.url()) #{t('groups.more')}

