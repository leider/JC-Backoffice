extends ../../../views/layout
include ../../../views/formComponents

block title
  | #{pageName} : #{subdir}

block content
  #renameDialog.modal.fade(tabindex='-1')
    .modal-dialog
      .modal-content
        .modal-header
          h3.modal-title #{pageName} Umbenennen
          button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
        .modal-body
          .row
            .col-12
              h3 Achtung: Verweise
              p Das Umbennen einer Seite Ã¤ndert nicht die Verweise auf sie.
              p Bitte Suche nach dem Seitennamen und passe die Verweise manuell an.

              form#addonform(action='/wiki/rename/' + subdir + '/' + pageName, method='post')
                +csrf
                fieldset
                  +text('newName', 'Neuer Name', '')
                  button.btn.btn-primary.float-right(type='submit') Speichern


  .col-12
    .page-header
      h2 #{title}
      .btn-group.float-right
          a.btn.btn-light(href='/wiki/list/' + subdir + '/', title='Alle Seiten in' + ' "' + subdir + '"'): i.fas.fa-list.fa-fw.fa-lg
          a.btn.btn-light(href='/wiki/versions/' + subdir + '/' + pageName, title='Revisionen'): i.fas.fa-sort-amount-down.fa-fw.fa-lg
          if (canEdit)
            a.btn.btn-light(data-toggle='modal', href='#renameDialog', title='Umbenennen'): i.fas.fa-cogs.fa-fw.fa-lg
            a.btn.btn-light(href='/wiki/edit/' + subdir + '/' + pageName, title='Bearbeiten'): i.fas.fa-edit.fa-fw.fa-lg
      form.hidden-print.form-search.float-right(action='/wiki/search', method='post')
        +csrf
        input.form-control(type='text', name='searchtext', placeholder='Wiki durchsuchen')
  .col-12
    | !{content}
