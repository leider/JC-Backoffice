extends ../../../views/layout
include ../../../views/formComponents

block title
  | Email Adressen

block content
  .col-12
    form#optionenform(action='/mailsender/submitEmailAddresses', method='post')
      +csrf
      fieldset
        .row
          .col-12
            .page-header
              +submitButtons()
              h2 Emailadressen <br>
                small Bearbeiten
            +legendMitBody('email', 'E-Mail Partner')
              for number in emailAddresses.noOfEmails()
                .row
                  .col-sm-6
                    +text('partner' + number, 'Partner', emailAddresses.state['partner' + number])
                  .col-sm-6
                    +email('email' + number, 'E-Mail', emailAddresses.state['email' + number])
        .row
          .col-12
            hr
            +submitButtons()
