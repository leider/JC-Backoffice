{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "nodenext",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "allowSyntheticDefaultImports": true,
    "types": ["node", "mocha"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
